{
    "id": 1,
    "name": "Simple request",
    "brief": "Lorem ipsum",
    "stages": [
        {
            "stage_no": 1,
            "objective": "Bring to <$end_npc_name$> <$requirements.items$>.",
            "requirements": {
                "items": [
                    {
                        "item_id": 1,
                        "count": 1
                    },
                    {
                        "item_id": 4,
                        "count": 1
                    }
                ]
            },
            "rewards": {
                "items": [
                    {
                        "item_id": 2,
                        "count": 1
                    }
                ],
                "exp": 100
            }
        }
    ],
    "dialogs": [
        {
            "if": {
                "dialog_state": 0,
                "questlog": 0,
                "keywords": ["quest"]
            },
            "then": {
                "responses": ["Wanna help me?"],
                "next_dialog_state": 1   
            }
        },

        {
            "if": {
                "dialog_state": 0,
                "questlog": 1,
                "keywords": ["quest"]
            },
            "then": {
                "responses": ["Have you finished?"],
                "next_dialog_state": 2   
            }
        },

        {
            "if": {
                "dialog_state": 1,
                "keywords": ["yes"]
            },
            "then": {
                "responses": ["Ok, bring me <$requirements.items$>"],
                "set_questlog": 1,
                "next_dialog_state": 0   
            }
        },

        {
            "if": {
                "dialog_state": 2,
                "keywords": ["yes"],
                "quest_reqirement": true
            },
            "then": {
                "responses": ["Great! Here is your reward"],
                "set_questlog": 2,
                "give_rewards": true,
                "next_dialog_state": 0   
            }
        },

        {
            "if": {
                "dialog_state": 2,
                "keywords": ["yes"],
                "quest_reqirement": false
            },
            "then": {
                "responses": ["Seems you havent finished yet. Come back when you do"],
                "next_dialog_state": 0   
            }
        },

        {
            "if": {
                "dialog_state": 2,
                "keywords": ["no"]
            },
            "then": {
                "responses": ["Ok, come back if you finish."],
                "next_dialog_state": 0   
            }
        }
    ]
}